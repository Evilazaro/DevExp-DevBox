{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DevCenter Configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the Dev Center.",
      "default": "DevExP-devcenter",
      "minLength": 1
    },
    "location": {
      "type": "string",
      "description": "The location of the Dev Center.",
      "default": "eastus2",
      "minLength": 1
    },
    "catalogItemSyncEnableStatus": {
      "type": "string",
      "description": "Enable catalogs per project.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "microsoftHostedNetworkEnableStatus": {
      "type": "string",
      "description": "Enable Microsoft hosted network.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "installAzureMonitorAgentEnableStatus": {
      "type": "string",
      "description": "Enable installation of Azure Monitor Agent.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "identity": {
      "$ref": "#/definitions/identity"
    },
    "catalogs": {
      "type": "array",
      "description": "List of catalogs.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/catalog"
      }
    },
    "environmentTypes": {
      "type": "array",
      "description": "List of environment types.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/environmentType"
      }
    },
    "projects": {
      "type": "array",
      "description": "List of projects.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/project"
      }
    },
    "imageDefinitions": {
      "type": "array",
      "description": "List of image definitions.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/imageDefinition"
      }
    },
    "tags": {
      "type": "object",
      "description": "The tags to automatically apply to deployed environments.",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": [
    "name",
    "location",
    "catalogItemSyncEnableStatus",
    "microsoftHostedNetworkEnableStatus",
    "installAzureMonitorAgentEnableStatus",
    "identity",
    "catalogs",
    "environmentTypes",
    "projects",
    "imageDefinitions",
    "tags"
  ],
  "definitions": {
    "identity": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of identity.",
          "default": "SystemAssigned",
          "enum": [
            "None",
            "SystemAssigned",
            "UserAssigned",
            "SystemAssigned, UserAssigned"
          ]
        },
        "roleAssignments": {
          "type": "array",
          "description": "List of role assignments.",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/roleDefinition"
          }
        }
      },
      "required": [
        "type",
        "roleAssignments"
      ],
      "additionalProperties": false
    },
    "catalog": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "customTasks",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "default": "gitHub",
          "enum": [
            "gitHub",
            "adoGit"
          ]
        },
        "uri": {
          "type": "string",
          "default": "https://github.com/Evilazaro/DevExP-DevBox.git",
          "pattern": "^https?://.+$"
        },
        "branch": {
          "type": "string",
          "default": "main",
          "minLength": 1
        },
        "path": {
          "type": "string",
          "default": ".configuration/devcenter/tasks",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "type",
        "uri",
        "branch",
        "path"
      ],
      "additionalProperties": false
    },
    "imageDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "frontEnd-Engineer",
          "minLength": 1
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "environmentType": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "dev",
          "minLength": 1
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "identityProvider",
          "minLength": 1
        },
        "description": {
          "type": "string",
          "default": "identityProvider",
          "minLength": 1
        },
        "environmentTypes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/environmentType"
          }
        },
        "catalogs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/catalog"
          }
        },
        "pools": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/imageDefinition"
          }
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "description",
        "environmentTypes",
        "catalogs",
        "pools",
        "tags"
      ],
      "additionalProperties": false
    },
    "roleDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The role definition ID.",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "description": "The principal ID.",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "id"
      ],
      "additionalProperties": false
    }
  }
}