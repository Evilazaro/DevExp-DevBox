{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DevCenter Configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the Dev Center.",
      "default": "DevExP-devcenter",
      "minLength": 1
    },
    "location": {
      "type": "string",
      "description": "The location of the Dev Center.",
      "default": "eastus2",
      "minLength": 1
    },
    "catalogItemSyncEnableStatus": {
      "type": "string",
      "description": "Enable catalogs per project.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "microsoftHostedNetworkEnableStatus": {
      "type": "string",
      "description": "Enable Microsoft hosted network.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "installAzureMonitorAgentEnableStatus": {
      "type": "string",
      "description": "Enable installation of Azure Monitor Agent.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "identity": {
      "$ref": "#/definitions/identity"
    },
    "catalogs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/catalog"
      }
    },
    "environmentTypes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/environmentType"
      }
    },
    "projects": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/project"
      }
    },
    "imageDefinitions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/catalog"
      }
    },
    "tags": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    }
  },
  "required": [
    "name",
    "location",
    "catalogItemSyncEnableStatus",
    "microsoftHostedNetworkEnableStatus",
    "installAzureMonitorAgentEnableStatus",
    "identity",
    "catalogs",
    "environmentTypes",
    "projects",
    "tags"
  ],
  "definitions": {
    "identity": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "None",
            "SystemAssigned",
            "UserAssigned",
            "SystemAssigned, UserAssigned"
          ]
        },
        "roleAssignments": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/roleDefinition"
          }
        }
      },
      "required": [
        "type",
        "roleAssignments"
      ],
      "additionalProperties": false
    },
    "catalog": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "type": {
          "type": "string",
          "enum": [
            "gitHub",
            "adoGit"
          ]
        },
        "uri": {
          "type": "string",
          "format": "uri"
        },
        "branch": {
          "type": "string",
          "minLength": 1
        },
        "path": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "type",
        "uri",
        "branch",
        "path"
      ],
      "additionalProperties": false
    },
    "environmentType": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "roleDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "id": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "name",
        "id"
      ],
      "additionalProperties": false
    }
  }
}