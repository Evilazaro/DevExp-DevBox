{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DevCenter Configuration",
  "description": "Schema for defining DevCenter configuration settings.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the DevCenter.",
      "minLength": 1,
      "maxLength": 64,
      "default": "contoso-devexp-devcenter",
      "examples": [
        "contoso-devexp-devcenter"
      ]
    },
    "location": {
      "type": "string",
      "description": "Azure region where the DevCenter is deployed.",
      "minLength": 1,
      "maxLength": 64,
      "default": "eastus2",
      "examples": [
        "eastus2"
      ]
    },
    "catalogItemSyncEnableStatus": {
      "type": "string",
      "description": "Status to enable or disable catalog item synchronization.",
      "enum": [
        "Enabled",
        "Disabled"
      ],
      "default": "Enabled"
    },
    "microsoftHostedNetworkEnableStatus": {
      "type": "string",
      "description": "Status to enable or disable Microsoft hosted network.",
      "enum": [
        "Enabled",
        "Disabled"
      ],
      "default": "Enabled"
    },
    "installAzureMonitorAgentEnableStatus": {
      "type": "string",
      "description": "Status to enable or disable Azure Monitor Agent installation.",
      "enum": [
        "Enabled",
        "Disabled"
      ],
      "default": "Enabled"
    },
    "identity": {
      "type": "object",
      "description": "Identity configuration for the DevCenter.",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "SystemAssigned"
          ],
          "default": "SystemAssigned"
        },
        "roleAssignments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-fA-F0-9\\-]{36}$",
                "description": "Role ID"
              },
              "name": {
                "type": "string",
                "description": "Role name"
              },
              "orgRoleType": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "DevManager"
                      ]
                    },
                    "azureADGroupId": {
                      "type": "string",
                      "pattern": "^[a-fA-F0-9\\-]{36}$"
                    },
                    "azureADGroupName": {
                      "type": "string"
                    },
                    "azureRBACRoles": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": {
                            "type": "string"
                          },
                          "id": {
                            "type": "string",
                            "pattern": "^[a-fA-F0-9\\-]{36}$"
                          }
                        },
                        "required": [
                          "name",
                          "id"
                        ],
                        "additionalProperties": false
                      }
                    }
                  },
                  "required": [
                    "type",
                    "azureADGroupId",
                    "azureADGroupName",
                    "azureRBACRoles"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "id",
              "name",
              "orgRoleType"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "type",
        "roleAssignments"
      ],
      "additionalProperties": false
    },
    "catalogs": {
      "type": "array",
      "description": "List of catalogs associated with the DevCenter.",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "gitHub"
            ]
          },
          "uri": {
            "type": "string",
            "format": "uri"
          },
          "branch": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "type",
          "uri",
          "branch",
          "path"
        ],
        "additionalProperties": false
      }
    },
    "environmentTypes": {
      "type": "array",
      "description": "List of environment types associated with the DevCenter.",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "deploymentTargetId": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "deploymentTargetId"
        ],
        "additionalProperties": false
      }
    },
    "projects": {
      "type": "array",
      "description": "List of projects associated with the DevCenter.",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "identity": {
            "$ref": "#/definitions/projectIdentity"
          },
          "pools": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "imageDefinitionName": {
                  "type": "string"
                }
              },
              "required": [
                "name",
                "imageDefinitionName"
              ],
              "additionalProperties": false
            }
          },
          "environmentTypes": {
            "$ref": "#/properties/environmentTypes"
          },
          "catalogs": {
            "type": "object",
            "properties": {
              "environmentDefinition": {
                "$ref": "#/properties/catalogs/items"
              },
              "imageDefinition": {
                "$ref": "#/properties/catalogs/items"
              }
            },
            "required": [
              "environmentDefinition",
              "imageDefinition"
            ],
            "additionalProperties": false
          },
          "tags": {
            "$ref": "#/properties/tags"
          }
        },
        "required": [
          "name",
          "description",
          "identity",
          "pools",
          "environmentTypes",
          "catalogs",
          "tags"
        ],
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "object",
      "description": "Tags associated with the DevCenter.",
      "additionalProperties": {
        "type": "string"
      },
      "default": {
        "environment": "dev",
        "division": "Platforms",
        "team": "DevExP",
        "project": "DevExP-DevBox",
        "costCenter": "IT",
        "owner": "Evilazaro",
        "resources": "DevCenter"
      }
    }
  },
  "definitions": {
    "projectIdentity": {
      "type": "object",
      "description": "Identity configuration for the DevCenter.",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "SystemAssigned",
            "UserAssigned",
            "None",
            "UserAssigned,SystemAssigned"
          ],
          "default": "SystemAssigned"
        },
        "roleAssignments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "azureADGroupId": {
                "type": "string",
                "pattern": "^[a-fA-F0-9\\-]{36}$"
              },
              "azureADGroupName": {
                "type": "string"
              },
              "azureRBACRoles": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "id": {
                      "type": "string",
                      "pattern": "^[a-fA-F0-9\\-]{36}$"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "required": [
              "azureADGroupId",
              "azureADGroupName",
              "azureRBACRoles"
            ],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}

