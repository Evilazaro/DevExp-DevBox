{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DevCenter Configuration",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the Dev Center.",
      "default": "DevExP-devcenter"
    },
    "location": {
      "type": "string",
      "description": "The location of the Dev Center.",
      "default": "eastus2"
    },
    "catalogItemSyncEnableStatus": {
      "type": "string",
      "description": "Enable catalogs per project.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "microsoftHostedNetworkEnableStatus": {
      "type": "string",
      "description": "Enable Microsoft hosted network.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "installAzureMonitorAgentEnableStatus": {
      "type": "string",
      "description": "Enable installation of Azure Monitor Agent.",
      "default": "Enabled",
      "enum": [
        "Enabled",
        "Disabled"
      ]
    },
    "identity": {
      "$ref": "#/definitions/identity"
    },
    "devBoxDefinitions": {
      "type": "array",
      "description": "List of dev box definitions.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/devBoxDefinition"
      }
    },
    "catalogs": {
      "type": "array",
      "description": "List of catalogs.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/catalog"
      }
    },
    "environmentTypes": {
      "type": "array",
      "description": "List of environment types.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/environmentType"
      }
    },
    "projects": {
      "type": "array",
      "description": "List of projects.",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/project"
      }
    },
    "tags": {
      "type": "object",
      "additionalProperties": true,
      "title": "The tags to automatically apply to deployed environments"
    }
  },
  "required": [
    "name",
    "location",
    "catalogItemSyncEnableStatus",
    "microsoftHostedNetworkEnableStatus",
    "installAzureMonitorAgentEnableStatus",
    "identity",
    "catalogs",
    "environmentTypes",
    "projects",
    "devBoxDefinitions",
    "tags"
  ],
  "definitions": {
    "identity": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "The type of identity.",
          "default": "SystemAssigned",
          "enum": [
            "None",
            "SystemAssigned",
            "UserAssigned",
            "SystemAssigned, UserAssigned"
          ]
        },
        "roleAssignments": {
          "type": "array",
          "description": "List of role assignments.",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/roleDefinition"
          }
        }
      },
      "required": [
        "type",
        "roleAssignments"
      ]
    },
    "catalog": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "customTasks"
        },
        "type": {
          "type": "string",
          "default": "gitHub",
          "enum": [
            "gitHub",
            "adoGit"
          ]
        },
        "uri": {
          "type": "string",
          "default": "https://github.com/Evilazaro/DevExP-DevBox.git"
        },
        "branch": {
          "type": "string",
          "default": "main"
        },
        "path": {
          "type": "string",
          "default": ".configuration/devcenter/tasks"
        }
      },
      "required": [
        "name",
        "type",
        "uri",
        "branch",
        "path"
      ]
    },
    "devBoxDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "DevExP-DevBox"
        },
        "image": {
          "type": "string",
          "default": "DevExP-DevBox"
        },
        "imageVersion": {
          "type": "string",
          "default": "latest"
        },
        "sku": {
          "type": "string"
        },
        "hibernateSupport": {
          "type": "string",
          "default": "Enabled",
          "enum": [
            "Enabled",
            "Disabled"
          ]
        },
        "osStorageType": {
          "type": "string",
          "default": "ssd_512gb",
          "enum": [
            "ssd_128gb",
            "ssd_256gb",
            "ssd_512gb",
            "ssd_1tb"
          ]
        },
        "default": {
          "type": "boolean",
          "default": true
        }
      },
      "required": [
        "name",
        "image",
        "imageVersion",
        "sku",
        "hibernateSupport",
        "osStorageType"
      ]
    },
    "environmentType": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "dev"
        }
      },
      "required": [
        "name"
      ]
    },
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "default": "identityProvider"
        },
        "description": {
          "type": "string",
          "default": "identityProvider"
        },
        "environmentTypes": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/environmentType"
          }
        },
        "catalogs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/catalog"
          }
        },
        "pools": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "devBoxDefinitionName": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "devBoxDefinitionName"
            ]
          }
        },
        "tags": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "name",
        "description",
        "environmentTypes",
        "catalogs",
        "pools",
        "tags"
      ]
    },
    "roleDefinition": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The role definition ID."
        },
        "id": {
          "type": "string",
          "description": "The principal ID."
        }
      },
      "required": [
        "name",
        "id"
      ]
    }
  }
}