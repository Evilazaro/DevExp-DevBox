{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "2022-02-14",
            "dependsOn": [],
            "name": "Shared-Image",
            "location": "WestUS3",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "/subscriptions/9e946e16-45cd-4e6a-ad69-bb7c5e24c230/resourceGroups/Contoso-DevBox-rg/providers/Microsoft.ManagedIdentity/userAssignedIdentities/contosoIdentityIBuilderUserDevBox": {}
                }
            },
            "properties": {
                "source": {
                    "offer": "windowsplustools",
                    "publisher": "microsoftvisualstudio",
                    "sku": "base-win11-gen2",
                    "type": "PlatformImage",
                    "version": "latest"
                },
                "buildTimeoutInMinutes": 120,
                "vmProfile": {
                    "vmSize": "Standard_DS2_v2",
                    "osDiskSizeGB": 128,
                    "osDiskType": "StandardSSD_LRS",
                    "storageAccountType": "StandardSSD_LRS",
                    "userAssignedIdentities": [
                        "/subscriptions/9e946e16-45cd-4e6a-ad69-bb7c5e24c230/resourceGroups/Contoso-DevBox-rg/providers/Microsoft.ManagedIdentity/userAssignedIdentities/contosoIdentityIBuilderUserDevBox"
                    ]
                },
                "customize": [
                    {
                        "type": "PowerShell",
                        "name": "Clone GitHub Repo",
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force;",
                            "cd C:\\;",
                            "git clone https://github.com/Evilazaro/Engineering.git eShop;"
                        ]
                    }
                ],
                "distribute": [
                    {
                        "type": "SharedImage",
                        "galleryImageId": "/subscriptions/9e946e16-45cd-4e6a-ad69-bb7c5e24c230/resourceGroups/Contoso-DevBox-rg/providers/Microsoft.Compute/galleries/ContosoImageGallery/images/Shared-Image-def",
                        "imageId": "/subscriptions/9e946e16-45cd-4e6a-ad69-bb7c5e24c230/resourceGroups/Contoso-DevBox-rg/providers/Microsoft.Compute/images/Shared-Image",
                        "runOutputName": "runOutputManagedImage",
                        "artifactTags": {
                            "division": "Contoso-Platform",
                            "solution": "eShop",
                            "businessUnit": "e-Commerce",
                            "Environment": "Prod",
                            "offer": "Contoso-DevWorkstation-Service",
                            "Team": "Engineering",
                            "Role": "Front-End-Engineer"
                        },
                        "location": "WestUS3",
                        "replicationlocations": [],
                        "replicationRegions": [
                            "WestUS3"                            
                        ],
                        "targetRegions": [
                            {
                                "name": "WestUS3"
                            }
                        ]
                    }
                ],
                "validate": {
                    "continueDistributeOnFailure": true
                }
            },
            "tags": {
                "division": "Contoso-Platform",
                "solution": "eShop",
                "businessUnit": "e-Commerce",
                "Environment": "Prod",
                "offer": "Contoso-DevWorkstation-Service",
                "Team": "Engineering",
                "Role": "Front-End-Engineer"
            }
        }
    ]
}
