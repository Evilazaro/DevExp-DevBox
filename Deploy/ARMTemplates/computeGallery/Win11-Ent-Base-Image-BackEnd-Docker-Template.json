{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "2022-07-01",
            "name": "BackEnd-Docker-Img",
            "location": "westus3",
            "tags": {
                "Environment": "Prod",
                "Role": "Front-End-Engineer",
                "Team": "Engineering",
                "businessUnit": "e-Commerce",
                "division": "Contoso-Platform",
                "offer": "Contoso-DevWorkstation-Service",
                "solution": "eShop"
            },
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "/subscriptions/9e946e16-45cd-4e6a-ad69-bb7c5e24c230/resourcegroups/ContosoFabric-Identity-DevBox-RG/providers/Microsoft.ManagedIdentity/userAssignedIdentities/ContosoFabricDevBoxImgBldId": {}
                }
            },
            "properties": {
                "source": {
                    "offer": "visualstudioplustools",
                    "publisher": "microsoftvisualstudio",
                    "sku": "vs-2022-ent-general-win11-m365-gen2",
                    "type": "PlatformImage",
                    "version": "latest"
                },
                "customize": [
                    {
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'));"
                        ],
                        "name": "Install Chocolatey",
                        "runAsSystem": false,
                        "runElevated": false,
                        "type": "PowerShell"
                    },
                    {
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force;",
                            "choco install -y wsl-ubuntu-2204 --ignore-checksums --params '/AutomaticInstall:true' --force;"
                        ],
                        "name": "Install Ubuntu WSL Distro",
                        "runAsSystem": false,
                        "runElevated": false,
                        "type": "PowerShell"
                    },
                    {
                        "name": "Restart Computer",
                        "restartTimeout": "10m",
                        "type": "WindowsRestart"
                    },
                    {
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force;",
                            "choco install -y docker-desktop --ignore-checksums --ia '--quiet --accept-license';"
                        ],
                        "name": "Install Docker Desktop",
                        "runAsSystem": false,
                        "runElevated": false,
                        "type": "PowerShell"
                    },
                    {
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force;",
                            "cd C:\\;",
                            "git clone https://github.com/Evilazaro/eShopOnContainers.git eShop;"
                        ],
                        "name": "Clone GitHub Repo for eShopOnContainers",
                        "runAsSystem": false,
                        "runElevated": false,
                        "type": "PowerShell"
                    }
                ],
                "distribute": [
                    {
                        "artifactTags": {
                            "Environment": "Prod",
                            "Role": "Front-End-Engineer",
                            "Team": "Engineering",
                            "businessUnit": "e-Commerce",
                            "division": "Contoso-Platform",
                            "offer": "Contoso-DevWorkstation-Service",
                            "solution": "eShop"
                        },
                        "excludeFromLatest": false,
                        "galleryImageId": "/subscriptions/9e946e16-45cd-4e6a-ad69-bb7c5e24c230/resourceGroups/ContosoFabric-ImageGallery-RG/providers/Microsoft.Compute/galleries/ContosoFabricImageGallery/images/BackEnd-Docker-Imgdef",
                        "replicationRegions": [
                            "WestUS3"
                        ],
                        "runOutputName": "BackEnd-Docker-Img",
                        "type": "SharedImage"
                    }
                ],
                "buildTimeoutInMinutes": 0,
                "vmProfile": {
                    "vmSize": "Standard_DS2_v2",
                    "osDiskSizeGB": 128,
                    "userAssignedIdentities": [
                        "/subscriptions/9e946e16-45cd-4e6a-ad69-bb7c5e24c230/resourcegroups/ContosoFabric-Identity-DevBox-RG/providers/Microsoft.ManagedIdentity/userAssignedIdentities/ContosoFabricDevBoxImgBldId"
                    ]
                }
            }
        }
    ]
}