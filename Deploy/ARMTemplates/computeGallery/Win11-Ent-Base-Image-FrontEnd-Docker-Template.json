{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "2022-02-14",
            "dependsOn": [],
            "name": "<imageName>",
            "location": "<location>",
            "identity": {
                "type": "UserAssigned",
                "userAssignedIdentities": {
                    "/subscriptions/<subscriptionID>/resourceGroups/<rgIdentity>/providers/Microsoft.ManagedIdentity/userAssignedIdentities/<identityName>": {}
                }
            },
            "properties": {
                "source": {
                    "offer": "windowsplustools",
                    "publisher": "microsoftvisualstudio",
                    "sku": "base-win11-gen2",
                    "type": "PlatformImage",
                    "version": "latest"
                },
                "vmProfile": {
                    "vmSize": "Standard_DS2_v2",
                    "osDiskSizeGB": 128,
                    "osDiskType": "StandardSSD_LRS",
                    "storageAccountType": "Standard_LRS",
                    "userAssignedIdentities": [
                        "/subscriptions/<subscriptionID>/resourceGroups/<rgIdentity>/providers/Microsoft.ManagedIdentity/userAssignedIdentities/<identityName>"
                    ]
                },
                "customize": [
                    {
                        "type": "PowerShell",
                        "name": "Install Chocolatey",
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force; [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072; iex ((New-Object System.Net.WebClient).DownloadString('https://chocolatey.org/install.ps1'));"
                        ]
                    },
                    {
                        "type": "PowerShell",
                        "name": "Install Docker Desktop",
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force;",
                            "choco install -y docker-desktop --ia '--quiet --accept-license';"
                        ]
                    },
                    {
                        "type": "WindowsRestart",
                        "name": "Restart Computer",
                        "restartTimeout": "10m"
                    },
                    {
                        "type": "PowerShell",
                        "name": "Clone GitHub Repo",
                        "inline": [
                            "Set-ExecutionPolicy Bypass -Scope Process -Force;",
                            "cd C:\\;",
                            "git clone https://github.com/Evilazaro/eShopOnContainers.git eShop;"
                        ]
                    }
                ],
                "distribute": [
                    {
                        "type": "SharedImage",
                        "excludeFromLatest": false,
                        "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/<sharedImageGalName>/images/<imageDefName>",
                        "imageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/images/<imageName>",
                        "runOutputName": "runOutputName",
                        "artifactTags": {
                            "division": "Contoso-Platform",
                            "solution": "eShop",
                            "businessUnit": "e-Commerce",
                            "Environment": "Prod",
                            "offer": "Contoso-DevWorkstation-Service",
                            "Team": "Engineering",
                            "Role": "Front-End-Engineer"
                        },
                        "location": "<location>",
                        "replicationRegions": [
                            "<location>"
                        ],
                        "targetRegions": [
                            {
                                "name": "<location>",
                                "replicaCount": 1,
                                "storageAccountType": "Standard_LRS"
                            }
                        ]
                    }
                ]
            },
            "tags": {
                "division": "Contoso-Platform",
                "solution": "eShop",
                "businessUnit": "e-Commerce",
                "Environment": "Prod",
                "offer": "Contoso-DevWorkstation-Service",
                "Team": "Engineering",
                "Role": "Front-End-Engineer"
            }
        }
    ]
}
