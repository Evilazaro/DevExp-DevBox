{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/galleries/images",
            "name": "<imageName>/<galleryName>",
            "apiVersion": "2021-10-01",
            "location": "<location>",
            "properties": {
                "osType": "Windows",
                "osState": "Generalized",
                "identifier": {
                    "publisher": "<publisher>",
                    "offer": "<offer>",
                    "sku": "<sku>"
                },
                "recommended": {
                    "vCPUs": {
                        "min": 1,
                        "max": 16
                    },
                    "memory": {
                        "min": 1,
                        "max": 32
                    }
                },
                "hyperVGeneration": "V2",
                "features": [
                    {
                        "name": "SecurityType",
                        "value": "TrustedLaunch"
                    },
                    {
                        "name": "IsHibernateSupported",
                        "value": "true"
                    }
                ],
                "architecture": "x64"
            },
            "tags": {}
        }
    ],
    "outputs": {}
}